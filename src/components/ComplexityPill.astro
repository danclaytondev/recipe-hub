---
import type { Complexity } from '../content/config';

interface Props {
  complexity: Complexity
}

const { complexity } = Astro.props;

const tagColors = {
    "quick": {
        fill: 'bg-blue-100',
        text: 'text-blue-900',
    },
    "medium": {
        fill: 'bg-yellow-100',
        text: 'text-yellow-900',
    },
    "longer": {
        fill: 'bg-blue-100',
        text: 'text-blue-900',
    }
}

let classes: string[] = [];

if (complexity) {
    classes = [tagColors[complexity].fill, tagColors[complexity].text];
}

---
<span
    class:list={["text-xs px-2 py-0.5 rounded-full"].concat(classes)}
>
{complexity}
</span>
