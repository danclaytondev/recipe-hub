---
import { getCollection, getEntry, CollectionEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const recipes = await getCollection('recipes');
---

<Layout title="Recipe Hub">
	<main>
		<ul class="bg-white px-6 py-4 my-2 shadow-md space-y-2 font-medium text-stone-800" role="list">
			{recipes.map((recipe) => (
				<li>
					{recipe.data.isMealIdeaOnly
						? `${recipe.data.title}`
						: <a class:list={["underline"]} href={'recipes/' + recipe.slug}>
							{recipe.data.title}
							</a>
					}
				</li>
			))}
		</ul>
	</main>
</Layout>
